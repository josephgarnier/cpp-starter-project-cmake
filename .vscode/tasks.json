{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Project: Clean",
      "detail": "Clean bin, build and doc directories",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./clean-cmake.sh"
      },
      "windows": {
        "command": "clean-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Project: Generate",
      "detail": "Configure and generate the CMake project",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./run-cmake.sh"
      },
      "windows": {
        "command": "run-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Project: Clean and Generate",
      "detail": "Clean, configure and generate the CMake project",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./clean-cmake.sh && echo \"\" && ./run-cmake.sh"
      },
      "windows": {
        "command": "clean-cmake.bat && echo. && run-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Uninstall",
      "detail": "Uninstall exported files",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "build",
      "targets": [
        "uninstall"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean",
      "detail": "Clean bin, build and doc directories",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "clean",
      "preset": "${command:cmake.activeBuildPresetName}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Build all",
      "detail": "Build CMake default targets (all)",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "build",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean and Rebuild all",
      "detail": "Clean and rebuild CMake default targets (all)",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "cleanRebuild",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Test",
      "detail": "Run tests",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "test",
      "preset": "${command:cmake.activeTestPresetName}",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Doc",
      "detail": "Generate product doc",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "build",
      "targets": [
        "doc"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Install",
      "detail": "Install exportable files",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "install",
      "preset": "${command:cmake.activeBuildPresetName}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Package",
      "detail": "Generate binary installers and source packages",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "linux": {
        "command": "cmake --build --preset \"x64-Release-Win-GCC\" --target package package_source && sleep 3s && rm -rfv ./bin/_CPack_Packages"
      },
      "windows": {
        "command": "cmake --build --preset \"x64-Release-Win-GCC\" --target package package_source && timeout /t 3 > NUL && del /a /f /s /q ./bin/_CPack_Packages"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Execute",
      "detail": "Run the built executable",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "linux": {
        "command": "./project-name"
      },
      "windows": {
        "command": "project-name"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "dependsOn": [
        "CMake: Compile"
      ]
    },
    {
      "label": "CMake: Workflow",
      "detail": "Build default targets (all) and run tests",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "workflow",
      "preset": "${command:cmake.activeWorkflowPresetName}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}